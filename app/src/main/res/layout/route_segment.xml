<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textStationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vienna Hbf"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_text_bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/train_24dp" />

        <TextView
            android:id="@+id/textTrainName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Railjet RJX 160"
            android:fontFamily="@font/sf_pro_text_regular"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textToggleStops"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="4 stops ▼"
        android:textSize="14sp"
        android:fontFamily="@font/sf_pro_text_regular"/>

    <LinearLayout
        android:id="@+id/containerStops"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:text="• St. Pölten Hbf"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_text_regular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="2dp"
            android:text="• Amstetten"
            android:textSize="14sp"
            android:fontFamily="@font/sf_pro_text_regular"/>
    </LinearLayout>
</LinearLayout>
